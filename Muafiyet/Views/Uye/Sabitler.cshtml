
@{
    ViewBag.Title = "Sabitler";
}
@using Muafiyet.Models

@section head{ 

<link href="~/Content/assets/advanced-datatable/media/css/demo_table.css" rel="stylesheet" />

    }

<div class="modal fade" id="popUniGuncelle" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="form">
                <form action="/Uye/UniGuncelle" method="post" role="form" name="formUniGuncelle" id="formUniGuncelle">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                        <h4 class="modal-title">Üniversite Güncelle</h4>
                    </div>
                    <div class="modal-body">
                        <div class="row">
                            <div class="col-lg-12">

                                <input id="UniversiteID" type="hidden" name="UniversiteID" required="required" />   

                                <div class="form-group">
                                    <label for="exampleInputPassword1">Üniversite:</label>
                                    <input type="text" class="form-control input-sm m-bot15" id="uniText" placeholder="Üniversite" name="Universite" required="required">
                                </div>
                            </div>                            
                        </div>

                    </div>
                    <div class="modal-footer">
                        <button data-dismiss="modal" class="btn btn-default" type="button">İptal</button>
                        <button class="btn btn-success uKaydet" type="submit"> Kaydet</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="popFakulteGuncelle" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="form">
                <form action="/Uye/FakulteGuncelle" method="post" role="form" name="formUniGuncelle" id="formFakulteGuncelle">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                        <h4 class="modal-title">Fakülte Güncelle</h4>
                    </div>
                    <div class="modal-body">
                        <div class="row">
                            <div class="col-lg-12">

                                <input id="FakulteID" type="hidden" name="FakulteID" required="required" />

                                <div class="form-group">
                                    <label for="exampleInputPassword1">Fakülte:</label>
                                    <input type="text" class="form-control input-sm m-bot15" id="fklText" placeholder="Fakülte" name="Fakulte" required="required">
                                </div>
                            </div>
                        </div>

                    </div>
                    <div class="modal-footer">
                        <button data-dismiss="modal" class="btn btn-default" type="button">İptal</button>
                        <button class="btn btn-success fKaydet" type="submit"> Kaydet</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="popBolumGuncelle" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="form">
                <form action="/Uye/BolumGuncelle" method="post" role="form" name="formUniGuncelle" id="formFakulteGuncelle">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                        <h4 class="modal-title">Bölüm Güncelle</h4>
                    </div>
                    <div class="modal-body">
                        <div class="row">
                            <div class="col-lg-12">

                                <input id="BolumID" type="hidden" name="BolumID" required="required" />

                                <div class="form-group">
                                    <label for="exampleInputPassword1">Bölüm:</label>
                                    <input type="text" class="form-control input-sm m-bot15" id="BlmText" placeholder="Bölüm" name="Bolum" required="required">
                                </div>
                            </div>
                        </div>

                    </div>
                    <div class="modal-footer">
                        <button data-dismiss="modal" class="btn btn-default" type="button">İptal</button>
                        <button class="btn btn-success fKaydet" type="submit"> Kaydet</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-lg-12">
        <section class="panel">
            <header class="panel-heading">
                Sabitler
                        
            </header>
            <div class="panel-body">
                <!--tab nav start-->
                <section class="panel">
                    <header class="panel-heading tab-bg-dark-navy-blue ">
                        <ul class="nav nav-tabs">
                            <li class="active">
                                <a data-toggle="tab" href="#uni">Üniversiteler</a>
                            </li>
                            <li class="">
                                <a data-toggle="tab" href="#fklt">Fakülteler</a>
                            </li>
                            <li class="">
                                <a data-toggle="tab" href="#blm">Bolumler</a>
                            </li>                           
                        </ul>
                    </header>
                    <div class="panel-body">
                        <div class="tab-content">
                            <div id="uni" class="tab-pane active">
                                <div class="adv-table">
                                    <table class="table table-striped table-advance table-hover display" id="example">
                                        <thead>
                                            <tr>
                                                <th>Üniversite</th>                                              
                                                <th>İşlemler</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (Universiteler u in ViewBag.Universiteler)
                                            {
                                                <tr>
                                                    <td>@u.Universite</td>                                         
                                                    <td>
                                                        <span data-toggle="modal" data-target="#popUniGuncelle">
                                                            <a href="#popUniGuncelle" class="btn btn-primary btn-xs tooltips modalUGuncelle" data-toggle="tooltip" data-placement="top" data-original-title="Güncelle" data-uniid="@u.UniversiteID" data-uni="@u.Universite"><i class="icon-pencil"></i></a>
                                                        </span>
                                                        <span data-toggle="modal" data-target="#modalSil">
                                                            <a href="#modalSil" class="btn btn-danger btn-xs tooltips modalKSil" data-toggle="tooltip" data-placement="top" data-original-title="Sil" data-u_id="@u.UniversiteID"><i class="icon-trash "></i></a>
                                                        </span>                                                  
                                                    </td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                            <div id="fklt" class="tab-pane">
                                <div class="adv-table">
                                    <table class="table table-striped table-advance table-hover display" id="example2">
                                        <thead>
                                            <tr>
                                                <th>Fakulte</th>
                                                <th>İşlemler</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (Fakulteler f in ViewBag.Fakulteler)
                                            {
                                                <tr>
                                                    <td>@f.Fakulte</td>
                                                    <td>
                                                        <span data-toggle="modal" data-target="#popFakulteGuncelle">
                                                            <a href="#popFakulteGuncelle" class="btn btn-primary btn-xs tooltips modalFGuncelle" data-toggle="tooltip" data-placement="top" data-original-title="Güncelle" data-fakulteid="@f.FakulteID" data-fakulte="@f.Fakulte"><i class="icon-pencil"></i></a>
                                                        </span>
                                                        <span data-toggle="modal" data-target="#">
                                                            <a href="#modalSil" class="btn btn-danger btn-xs tooltips modalKSil" data-toggle="tooltip" data-placement="top" data-original-title="Sil" data-kfakulteid="@f.FakulteID"><i class="icon-trash "></i></a>
                                                        </span>
                                                    </td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                            <div id="blm" class="tab-pane">
                                <div class="adv-table">
                                    <table class="table table-striped table-advance table-hover display" id="example3">
                                        <thead>
                                            <tr>
                                                <th>Bölüm</th>
                                                <th>İşlemler</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (Bolumler b in ViewBag.Bolumler)
                                            {
                                                <tr>
                                                    <td>@b.Bolum</td>
                                                    <td>
                                                        <span data-toggle="modal" data-target="#popBolumGuncelle">
                                                            <a href="#popBolumGuncelle" class="btn btn-primary btn-xs tooltips modalBGuncelle" data-toggle="tooltip" data-placement="top" data-original-title="Güncelle" data-bolumid="@b.BolumID" data-bolum="@b.Bolum"><i class="icon-pencil"></i></a>
                                                        </span>
                                                        <span data-toggle="modal" data-target="#modalSil">
                                                            <a href="#modalSil" class="btn btn-danger btn-xs tooltips modalBSil" data-toggle="tooltip" data-placement="top" data-original-title="Sil" data-k_id="@b.BolumID"><i class="icon-trash "></i></a>
                                                        </span>
                                                    </td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        
                        </div>
                    </div>
                </section>
                <!--tab nav start-->
            </div>
        </section>
    </div>
</div>

@section scripts{

<script type="text/javascript" language="javascript" src="~/Content/assets/advanced-datatable/media/js/jquery.dataTables.js"></script>

@*<script src="~/Scripts/JavaScript.js"></script>*@

    <script type="text/javascript" charset="utf-8">     

        $(".modalUGuncelle").click(function () {
            var uniID = $(this).data("uniid");
            var uni = $(this).data("uni");


            $("#UniversiteID").val(uniID);
            $("#uniText").val(uni);

        });


        $(".modalFGuncelle").click(function () {
            var fakulteid = $(this).data("fakulteid");
            var fakulte = $(this).data("fakulte");


            $("#FakulteID").val(fakulteid);
            $("#fklText").val(fakulte);

        });

        $(".modalBGuncelle").click(function () {
            var bolumid = $(this).data("bolumid");
            var bolum = $(this).data("bolum");


            $("#BolumID").val(bolumid);
            $("#BlmText").val(bolum);

        });


        $('.table').dataTable({

        });
      
</script>
}

